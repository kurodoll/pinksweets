@import url('https://fonts.googleapis.com/css?family=Raleway+Dots');


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                     * // Content Areas //
body
    background black

div.hibachi
    position absolute
    top 0
    left 0

    height 102px
    width 100%
    background linear-gradient(90deg, rgba(50,150,150,.2), alpha(black, 75%))

div.nav
    position absolute
    top 102px
    left 0
    right 0
    padding 3px

    background linear-gradient(90deg, rgba(50,150,150,.2), alpha(black, 75%))
    border-bottom 1px rgba(50,150,150,.5) dashed

div.nav p a
    padding 3px
    padding-left 5px
    padding-right 5px

div.nav p a:hover
    text-decoration none
    background rgba(50,150,100,.5)

div.content
    position absolute
    top 121px
    bottom 0
    left 0
    right 0
    overflow-y scroll

    background rgba(5,15,10,.5)

div.center
    margin-left 20%
    margin-right 20%
    padding-top 20px
    padding-bottom 20px

div.new-post-modal
    position absolute
    top 11px
    left 73px

    width 500px
    height 563px

    background alpha(black, 90%)
    border 1px rgba(50,150,100,.5) solid

    display none

div.post, div.reply
    margin 10px
    padding 5px
    padding-left 15px

    width 1000px

    background rgba(5,15,10,.8)
    border-left 1px rgba(50,150,100,.5) dashed

div.post pre
    width 980px

    white-space pre-wrap
    word-wrap break-word

div.reply
    margin-left 100px

div.post img, div.reply img
    height 250px
    margin-right 10px

div.highlight
    background rgb(10,30,25)
    border 1px rgb(40,120,100) solid


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                               * // Text //
h1
    margin 0
    float right

    font 50pt 'Raleway Dots'
    color pink

p, pre, label
    margin 0

    font 8pt Verdana
    color rgb(200,200,200)

p.buttons
    margin-top 11px
    margin-left 5px
    padding 5px

p.buttons a
    padding 5px
    background alpha(pink, 10%)

p.buttons a:hover
    text-decoration none
    background rgba(50,150,100,.5)

label
    margin-left 10px

a
    color pink
    text-decoration none

a:hover
    text-decoration underline

.highlight
    color rgb(100,225,225)

.highlight-bg
    padding 3px
    background rgba(50,150,100,.1)

.subdued
    color grey

.small
    font-size 7pt


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                            * // Tables //
table
    border-collapse collapse

td.post
    vertical-align top
    padding-left 5px

td.post p
    margin-bottom 5px


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                             * // Forms //
input[type='text'], input[type='submit'], textarea
    margin 5px
    margin-bottom 0

    padding 5px
    width 480px

    background rgba(50,150,100,.2)
    border none

    color white
    font 8pt Verdana

input[type='submit']
    width 100px

    background rgba(50,150,100,.2)
    border 1px rgba(50,150,100,.5) solid

input[type='submit']:hover
    background rgba(250,150,50,.2)
    border 1px rgb(250,150,50) solid

    cursor pointer

input.inline
    width auto

textarea
    height 400px


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                             * // Other //
img
    margin-bottom -4px
